<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstructuraBase.ItemEquipos">

    <TextView
        android:id="@+id/tv_selequ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/tv_selequ"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="165dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/cb_e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_e1"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_e2"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_e3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_e3"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_e4"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_e5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ePMP 1000 y Force 180"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="SelEquipo1"
        android:text="@string/bt_e1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>